%tr
  %td
    = link_to book_path(book), class: 'general-img-wrap-table' do
      = image_tag(book.cover_image.url, class: 'cart-img-shadow pull-left')
  %td
    %p.title= book.title
  %td
    %span.font-16.in-gold-500= book.price
  %td
    .input-group
      %a.input-link{href: line_item_reduce_path(id: line_item), method: :post}
        %i.fa.fa-minus.line-heaght-40
      %input.form-control.quantity-input{type: "text"}
      %a.input-link{href: line_item_add_path(id: line_item), method: :post}
        %i.fa.fa-plus.line-heaght-40
  %td
    %span.font-16.in-gold-500= line_item.subtotal_price
  %td
    %button.close.general-cart-close{type: "button", 'aria-label': "Close"}
      %span{'aria-hidden': "true"} &times;
