- if current_cart.coupon
  %h3 Already passed
- else
  = simple_form_for :coupon, url: coupon_path, method: :put do |f|
    = f.input :code, label: t('.label'), input_html: { class: 'form-control mb-30' }, label_html: { class: 'input-labe' }, placeholder: t('.placeholder'), type: 'text'
    = f.button :submit, t('.submit_button'), class: 'btn btn-primary mb-30'
