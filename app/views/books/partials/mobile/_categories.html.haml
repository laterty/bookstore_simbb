%p.lead.small.mb-10= t('.filter_by_categories')
.dropdown
  %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    = @current_category
    %i.fa.fa-angle-down.dropdown-icon.pull-right
  %ul.dropdown-menu
    %li
      = link_to books_path(category: 'All'), class: 'filter-link' do
        = t('.all')
        %span.badge.general-badge= books_count
    -categories.each do |category|
      %li
        = link_to books_path(category: category), class: 'filter-link' do
          = category.name
          %span.badge.general-badge= category.books.count
