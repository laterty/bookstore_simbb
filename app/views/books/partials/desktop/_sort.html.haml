.dropdowns.pull-right
  .dropdown.width-240
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = @current_sort_type
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li
        = link_to 'Newest first', books_path(sort_type: 'year_of_publication_desc')
      %li
        = link_to 'Popular first', books_path(sort_type: 'year_of_publication_desc')
      %li
        = link_to 'Price: Low to high', books_path(sort_type: 'price_asc')
      %li
        = link_to 'Price: High to low', books_path(sort_type: 'price_desc')
