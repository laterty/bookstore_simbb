          = link_to 'Popular first', books_path(sort_type: 'created_at', sort_direction: :desc)
        %li
          = link_to 'Price: Low to high', books_path(sort_type: 'price', sort_direction: :asc)
        %li
          = link_to 'Price: High to low', books_path(sort_type: 'price', sort_direction: :desc)
