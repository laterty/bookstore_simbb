.col-xs-5.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      = image_tag(book.cover_image.url, class: 'img-shadow general-thumbnail-img')
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book_path(book), class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          = link_to line_items_path(line_item: { book_id: book.id }), class: 'thumb-hover-link', method: :post do
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    %p.title= book.title
    %p.font-16.in-gold-500= book.price
    %span.divider-sm
    %p.lead.small= book.authors_names
