.general-main-wrap
  .text-center.mb-40
    %h3.general-subtitle= t('.title')
    = render partial: 'checkouts_partials/status_bar', locals: {current_order: @current_order}
    %p.fw-300= t('.email_notife', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= t('.order_number', number: @current_order.id)
        %p.general-address.mb-30= @current_order.created_at.strftime('%m/%d/%Y')
      = render partial: 'checkouts/partials/confirm/shipping_address', locals: { shipping_address: current_user.shipping_address, link: false }
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= t('.order_number', number: @current_order.id)
      %p.general-address.mb-30= @current_order.created_at.strftime('%m/%d/%Y')
  = render partial: 'checkouts/partials/complete/desktop/book_item', locals: { order_items: @current_order.order_items.includes([:book]) }
  .right_cart_summary
    = render partial: 'checkouts/partials/cart_summary', locals: { current_order: @current_order }
  .text-center
    = link_to t('.button_submit'), books_path, class: 'btn btn-default mb-20'
